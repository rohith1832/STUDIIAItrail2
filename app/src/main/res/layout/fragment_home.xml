<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Search subjects or upload notesâ€¦"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Search Results Container (CardView) occupies ~35% height below search bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchResultsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/searchEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchResultsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>

    <!-- Feature Cards Grid below searchResultsContainer -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/featureGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/searchResultsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Quiz Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_quiz"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            android:textStyle="italic"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/antique_gold"
            app:layout_gravity="fill_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/quiz_icon_desc"
                    android:src="@drawable/ic_quiz"
                    app:tint="@color/card_icon" />

                <TextView
                    android:text="Quiz"
                    android:textColor="@android:color/black"
                    android:textStyle="italic"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Flashcards Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_flashcards"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/antique_gold"
            app:layout_gravity="fill_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_flashcards"
                    app:tint="@color/card_icon" />
                <TextView
                    android:text="Flashcards"
                    android:textColor="@android:color/black"
                    android:textStyle="italic"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Study Planner Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_study_planner"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/antique_gold"
            app:layout_gravity="fill_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_study_planner"
                    app:tint="@color/card_icon"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />

                <TextView
                    android:text="Study Planner"
                    android:textColor="@android:color/black"
                    android:textStyle="italic"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progress Tracker Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_progress_tracker"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/antique_gold"
            app:layout_gravity="fill_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_progress_tracker"
                    app:tint="@color/card_icon" />
                <TextView
                    android:text="Progress Tracker"
                    android:textColor="@android:color/black"
                    android:textStyle="italic"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Exam Date Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_exam_date"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/antique_gold"
            app:layout_gravity="fill_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_exam_date"
                    app:tint="@color/card_icon" />
                <TextView
                    android:text="15 Days\nLeft For Exam"
                    android:textColor="@android:color/black"
                    android:textStyle="italic"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
